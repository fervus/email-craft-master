{
  "name": "mailcraft-desktop",
  "version": "1.0.0",
  "description": "MailCraft - Desktop Email Campaign Platform",
  "main": "src/main-final.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --publish=never",
    "build:win": "electron-builder --win --publish=never",
    "build:portable": "electron-builder --mac --win --publish=never",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "email",
    "campaign",
    "desktop",
    "portable"
  ],
  "author": "MailCraft",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "nodemailer": "^6.9.7",
    "papaparse": "^5.5.3",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.mailcraft.desktop",
    "productName": "MailCraft",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "MailCraft-${version}-portable.${ext}"
    }
  }
}
